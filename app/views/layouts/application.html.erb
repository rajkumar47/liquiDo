<!DOCTYPE html>
<html>
<head>
  <%= favicon_link_tag %>
  <title><%= title %></title>
  <%= csrf_meta_tag %>
  <%= render 'layouts/stylesheets' %>
  <%= javascript_include_tag :defaults %>
  <%= javascript_include_tag 'jquery-1.6.1.js', 'application' %>
  <%= javascript_include_tag 'jquery-1.6.1.js','jquery-ui-1.8.13.custom.min.js' %>
</head>

<body>
  <div class="container">
    <%= render 'layouts/header' %>
    <section>
      <% flash.each do |key, value| %>
        <%= content_tag(:div, value, :class => "flash #{key}") %>
      <% end %>
      <%= yield %>
    </section>
    <% controller = params[:controller] %>
    <% action = params[:action] %>
  </div>
  <%= debug(params) if Rails.env.development? %>

</body>
</html>
